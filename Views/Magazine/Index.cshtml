@model List<LostWKND.Models.Issue>

@{
    ViewBag.Title = "Index";
}

<div class="magazine">
    @{
        int displayIssueID = ViewBag.DisplayIssueID;
        var displayIssue = Model.Where(issue => issue.ID == displayIssueID).Single();
    }


    <div class="current-issue-img-container">
        <img class="current-issue-img" src="@Path.Combine("../Content/Images/", displayIssue.CoverImage.Name + "." + displayIssue.CoverImage.Extension)" />
    </div>

    <div class="current-issue-paragraphs">
        
        @{
            foreach (var paragraph in displayIssue.Paragraphs)
            {
                <div>
                    <p class="current-issue-paragraph">@paragraph</p>
                    <br />
                </div>
            }
        }
    </div>

    <div>
        <div class="all-issues-header" id="all-issues">All Issues</div>

        <hr class="all-issues-hr" />

        <div class="all-issues">
            @{
                foreach (var issue in Model)
                {
                    <a href="@Url.Action("Index", "Magazine", new { issueID = issue.ID })">
                        <div class="all-issues-item">

                            <img src="@Path.Combine("../Content/Images/", displayIssue.CoverImage.Name + "." + displayIssue.CoverImage.Extension)" />
                            <div>@issue.Year</div>

                        </div>
                    </a>
                }
            }
        </div>
    </div>



    <div>
        <div class="about-header" id="about">About</div>

        <hr class="about-hr" />

        <div class="about-paragraphs">
            <p>Working in tandem with a network of global creatives, our self-published web and print magazine prides itself on provocative editorial and storytelling, superb photography and artwork, and inspirational thinkpieces from around the world. Established in 2016 by Lilly Ball and Andrew Stark, LOST WKND showcases the innovative, the brave, and the controversial.</p>

            <p>The Birth Issue features world-renowned artists Rachel Lee Hovnanian and Tierney Gearon, author Benjamin Percy, star of American Movie Mark Borchardt, exclusive poetry by Andrea Cohen, groundbreaking singer-songwriter Tamaryn, and much more, including exclusive cover art by Berlin-based Pierre Schmidt.</p>

            <p>LOST WKND is based in Minneapolis.</p>
        </div>
    </div>



